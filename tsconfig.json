{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*",
    "src/views",
    "admin/api"
  ],
  "exclude": [
    "node_modules"
  ]
}